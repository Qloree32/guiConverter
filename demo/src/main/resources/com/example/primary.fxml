<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.PrimaryController">
    <Label text="Metric Converter" style="-fx-font-size: 18;" />

    <TextField fx:id="inputField" promptText="Enter value to convert" />
    <ComboBox fx:id="fromUnit" promptText="From Unit" />
    <ComboBox fx:id="toUnit" promptText="To Unit" />

    <Button text="Convert" onAction="#handleConvert" />
    
    <Label fx:id="resultLabel" text="Result will appear here" />
</VBox>
